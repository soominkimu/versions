#!/bin/zsh
C_R='\e[0;31m'
C_G='\e[0;32m'
C_B='\e[0;34m'
C_Y='\e[0;33m'
C_N='\e[0m'

runCmd ()
{
  printf $1
  if [ -z $3 ]; then     # just print info
    print "${C_B} $2${C_N}"
  else                   # run command
    print "${C_G} $2 ${C_B}$3${C_N}"
    $2 $3
  fi
}
~/z/dev/logo
HIST=~/z/update-hist.txt
printf "âŒ›ï¸ ${C_B}Last Update: ${C_N}"
if [ -f $HIST ]; then
  tail -n 1 $HIST  # print last one line
else
  print "${C_R}No history file exists.${C_N}"
fi
runCmd "ðŸº" brew update
runCmd "ðŸ»" brew upgrade
runCmd "ðŸ¥‚" brew cleanup
runCmd "ðŸ·" brew doctor
runCmd "ðŸ·" rustup update

~/z/dev/versions
runCmd "ðŸ’§" "npm install -g npm@latest"
runCmd "ðŸ’§" "yarn global upgrade"
runCmd "ðŸ’§" "nvm install node --reinstall-packages-from=node"
date +"%H:%M:%S %m/%d/%Y" >> $HIST
