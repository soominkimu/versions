#!/bin/zsh
C_R='\e[0;31m'
C_G='\e[0;32m'
C_B='\e[0;34m'
C_Y='\e[0;33m'
C_N='\e[0m'

runCmd ()
{
  printf $1
  if [ -z $3 ]; then     # just print info
    print "${C_B} $2${C_N}"
  else                   # run command
    print "${C_G} $2 ${C_B}$3${C_N}"
    $2 $3
  fi
}
neofetch
~/z/dev/logo
HIST=~/z/update-hist.txt
printf "âŒ›ï¸ ${C_Y}Last Update: "
if [ -f $HIST ]; then
  tail -n 1 $HIST  # print last one line
else
  print "${C_R}No Update History available.${C_N}"
fi
runCmd "ğŸº" brew update
runCmd "ğŸ»" brew upgrade
runCmd "ğŸ¥‚" brew cleanup
runCmd "ğŸ·" brew doctor
runCmd "ğŸ·" rustup update
runCmd "ğŸ" flutter upgrade

date +"%H:%M:%S %m/%d/%Y" >> $HIST
~/z/dev/versions
runCmd "ğŸ’§" "npm install -g npm@latest"
runCmd "ğŸ’§" "npm doctor"
runCmd "ğŸ’§" "yarn global upgrade"
runCmd "ğŸ’§" "nvm install node --reinstall-packages-from=node"
runCmd "ğŸ’§" "pip-check # pip install --upgrade ..."
istats
