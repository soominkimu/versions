#!/bin/zsh
C_R='\e[0;31m'
C_G='\e[0;32m'
C_B='\e[0;34m'
C_Y='\e[0;33m'
C_N='\e[0m'

showV ()
{
  printf "${C_Y}$1 "

  if [ -z "${VC}" ]
  then
    printf "${C_G}Latest=${VL}"
  else
    printf "${C_N}${VC} "
    if [ -z "${VL}" ]
    then
      printf "${C_G}*"
    else
      if [ "${VC}" = "${VL}" ]
      then
        printf "${C_G}Latest"
      else
        printf "${C_G}${VL} ${C_R}New!"
      fi
    fi
  fi

  if [ -z $2 ]
  then
    print "${C_N}"
  else
    print " $2${C_N}"
  fi
}

