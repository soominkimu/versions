#!/bin/zsh
C_R='\e[0;31m'
C_G='\e[0;32m'
C_B='\e[0;34m'
C_Y='\e[0;33m'
C_N='\e[0m'

showV ()
{
  printf "${C_Y}$1${C_G}: "

  if [ -z "${VC}" ]
  then
    printf "${C_G}âœ¨${VL}"
  else
    printf "${C_N}${VC}"
    if [ -z "${VL}" ]
    then
      printf "âš¡ï¸"
    else
      if [ "${VC}" = "${VL}" ]
      then
        printf "âœ¨"
      else
        printf " ${C_G}${VL}${C_R}ğŸŒˆNew!"
      fi
    fi
  fi

  if [ -z $2 ]
  then
    print "${C_N}"
  else
    print " ${C_B}$2${C_N}"
  fi
}

print "${C_G}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”¬â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”"
print "${C_G}â”‚ ${C_Y}Versions${C_G} â”‚ ${C_N}Installed${C_G} â”‚ Latestâœ¨ â”‚"
print "${C_G}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”˜"
VC=`node -v`
VL="v`npm show node@lts version`"
showV "ğŸ node    " "${C_R}`npm show node@latest version`ğŸŒˆ ${C_B}# nvm -ls"

VC=`npm -v`
