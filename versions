print "${C_G}â”‚ ${C_Y}Versions${C_G} â”‚ ${C_N}Installed${C_G} â”‚ Latest â”‚"
print "${C_G}â””â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”´â”€â”€â”€â”€â”€â”€â”€â”€â”˜"
