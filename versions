showV "ğŸ npm     " "[`npm bin -g`]"

VC=`yarn -v`
VL=`npm show yarn version`
showV "ğŸ§µ  yarn    " "[`yarn global bin`]"

VC=`create-react-app --version`
VL=`npm show create-react-app version`
